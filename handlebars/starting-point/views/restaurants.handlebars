<section>
    {{!-- for each element in sauce list, show this html --}}
    <div class="container">
        <div class="row">
            {{#each restaurants}}
            <div class="col">
                <img class="item-img" src="{{image}}" width="80px"/>
                <div class="col"><a class="btn" href="/restaurants/{{id}}"><p>{{name}}</p></a></div>
                <div class="row">
                    <div class="col">
                        <button id="view" class="btn-view">View</button>
                    </div>
                    <div class="col">
                        <button id="{{id}}" class="btn-delete">Delete</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>