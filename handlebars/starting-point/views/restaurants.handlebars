<section>
    {{!-- for each element in restaurant list, show this html --}}
    <h6>{{alertMessage}}</h6>
    <div class="container">
        <div class="row">
            {{#each restaurants}}
            <div class="col">
                <img class="item-img" src="{{image}}" width="80px"/>
                <div class="=row"><div class="col">{{name}}</div></div>
                <div class="row no-gutters">
                    <div class="col-4">
                        <a class="btn" href="/restaurants/{{id}}"><button id="btn-view">View</button></a>
                    </div>
                    <div class="col-4">
                        <a class="btn" href="/update-restaurants/{{id}}"><button id="btn-{{id}}">Update</button></a>
                    </div>
                    <div class="col-4">
                        <a class="btn" href="#"><button id="btn-{{id}}" onclick="deleteRestaurants({{id}})">Delete</button></a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <script src="/restaurants.js"></script>
</section>